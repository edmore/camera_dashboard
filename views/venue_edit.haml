%body
  %h1
    IP Camera Information Update
  %form{:name => "venue_update_form", :method => "post", :action => "/venue/#{venue[4]}"}
    %input{:type => "hidden", :name =>"_method",:value=>"put"}
    %table
      %tr
        %td
          %label{:for => "venue_name"} Venue:
        %td
          %input{:type => "text", :name => "venue_name", :class => "text", :size => 30, :value => venue[0]}
      %tr
        %td
          %label{:for => "cam_user"} Camera Username:
        %td
          %input{:type => "text", :name => "cam_user", :class => "text", :size => 30, :value => venue[1]}
      %tr
        %td
          %label{:for => "cam_password"} Camera Password:
        %td
          %input{:type => "password", :name => "cam_password", :class => "text", :size => 30, :value => venue[2]}
      %tr
        %td
          %label{:for => "cam_url"} URL:
        %td
          %input{:type => "text", :name => "cam_url", :class => "text", :size => 50, :value => venue[3]}
      %tr
        %td
          %input{:type => "submit", :value => "Edit"}
          %a{:href => "/venues"} Cancel
