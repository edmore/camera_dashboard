%body
  %h1
    IP Camera Dashboard
  %p
    %a{:href => "/"} Grid View
    %a{:href => "/tiled"} Tiled View
    %a{:href => "/venues"} Manage
  -if venues.any?
    %ul.venues
      - venues.each do |venue|
        %li.venue
          %div.details
            %ul
              %li
                %span Venue:
                %span
                  = venue[0]
              %li
                %span Camera URL:
                %span
                  = venue[1]
              -unless venue[3].nil?
                %li
                  %span Last Updated:
                  -if not_regularly_updating(venue[3])
                    %span.flag
                      = venue[3]
                  -else
                    %span.updating
                      = venue[3]
          %div.feed
            -unless venue[3].nil?
              %img{:src => "feeds/#{venue[0]}/#{venue[0]}.jpeg"}
          %div.clear
  -else
    = "Sorry IP camera information not setup yet."